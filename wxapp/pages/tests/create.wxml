<view class="page" xmlns:wx="http://www.w3.org/1999/xhtml">
    <view class="page__hd">
        <view class="page__title">新建测试</view>
    </view>
    <view class="page__bd">
        <view class="weui-toptips weui-toptips_warn" wx:if="{{showTopTips}}">{{error_msg}}</view>
        <form bindsubmit="formSubmit" bindreset="formReset">
            <view class="weui-cells__title">题目</view>
            <view class="weui-cells weui-cells_after-title">
                <view class="weui-cell weui-cell_input">
                    <view class="weui-cell__bd">
                        <input class="weui-input" name="title" placeholder="请输入题目" />
                    </view>
                </view>
            </view>

            <view class="weui-cells__title">题目描述</view>
            <view class="weui-cells weui-cells_after-title">
                <view class="weui-cell">
                    <view class="weui-cell__bd">
                        <textarea class="weui-textarea" name="description" placeholder="请输入描述" style="height: 3.3em" />
                        <view class="weui-textarea-counter">0/200</view>
                    </view>
                </view>
            </view>
            <view class="weui-cells__title">选择图片</view>
            <view class="weui-cells weui-cells_after-title">
                <view class="weui-cell">
                    <view class="weui-cell__bd">
                        <text class="weui-text" name="image" placeholder="请输入描述"/>
                    </view>
                    <view class="weui-uploader__input-box">
                        <view class="weui-uploader__input" bindtap="uploadToCos"></view>
                    </view>
                </view>
            </view>

            <view class="weui-cells__title">测试时间</view>
            <view class="weui-cells weui-cells_after-title">
                <view class="weui-cell weui-cell_input">
                    <view class="weui-cell__hd">
                        <view class="weui-label">开始时间</view>
                    </view>
                    <view class="weui-cell__bd">
                        <picker mode="date" name="start_date" value="{{date}}" start="2015-09-01" end="2017-09-01" bindchange="bindStartDateChange">
                            <view class="weui-input">{{start_date}}</view>
                        </picker>
                    </view>
                    <view class="weui-cell__bd">
                        <picker mode="time" name="start_time" value="{{time}}" start="09:01" end="21:01" bindchange="bindStartTimeChange">
                            <view class="weui-input">{{start_time}}</view>
                        </picker>
                    </view>
                </view>
                <view class="weui-cell weui-cell_input">
                    <view class="weui-cell__hd">
                        <view class="weui-label">结束时间</view>
                    </view>
                    <view class="weui-cell__bd">
                        <picker mode="date" name="end_date" value="{{date}}" start="2015-09-01" end="2017-09-01" bindchange="bindEndDateChange">
                            <view class="weui-input">{{end_date}}</view>
                        </picker>
                    </view>
                    <view class="weui-cell__bd">
                        <picker mode="time" name="end_time" value="{{time}}" start="09:01" end="21:01" bindchange="bindEndTimeChange">
                            <view class="weui-input">{{end_time}}</view>
                        </picker>
                    </view>
                </view>
            </view>

            <view class="weui-cells__title">备注</view>
            <view class="weui-cells weui-cells_after-title">
                <view class="weui-cell">
                    <view class="weui-cell__bd">
                        <textarea class="weui-textarea" name="remark" placeholder="这里是备注，备备备备注" style="height: 3.3em" />
                        <view class="weui-textarea-counter">0/200</view>
                    </view>
                </view>
            </view>

            <view class="weui-btn-area">
                <button class="weui-btn" type="primary" formType="submit">确定</button>
            </view>
        </form>
    </view>
</view>